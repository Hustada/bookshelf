<h5>Register</h5>

<%= form_for @user do |f| %>
  <%= f.label :email %> 
  <%= f.text_field :email %>
  <%= f.label :full_name %> 
  <%= f.text_field :full_name %>
  <br/>
  <%= f.label :password %> 
  <%= f.password_field :password %>
  <br/>
  <%= f.submit "Register", class: 'btn btn-primary' %>
<% end %>


